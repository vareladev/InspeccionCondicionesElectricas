<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">
        <TextView
            android:id="@+id/measure_his_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="Registro de medidas: inspecci칩n"
            android:textSize="35dp"
            android:textStyle="bold"
            android:padding="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="150dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:id="@+id/detElecData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/second_menu_1"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Seguridad recept치culos"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="150dp">
                <LinearLayout
                    android:id="@+id/detLuxData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/second_menu_2"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Iluminaci칩n Ambiental"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="150dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:id="@+id/detNoiseData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/second_menu_4"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Ruido ambiental"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="150dp">
                <LinearLayout
                    android:id="@+id/detTempData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/second_menu_5"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Temperatura ambiental"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="150dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:id="@+id/detHumData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/second_menu_6_2"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Humedad relativa ambiental"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="150dp">
                <LinearLayout
                    android:id="@+id/detComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_comments"
                        android:background="@color/white"
                        android:padding="30dp"/>
                    <TextView
                        android:gravity="top|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Observaciones"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|bottom">
            <Button
                android:id="@+id/btn_update_insp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Actualizar inspecci칩n"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/shape_round_corners"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
